<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.snake.controllers.GameOverController"
      style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);
             -fx-padding: 40;">

    <Label text="GAME OVER"
           style="-fx-font-size: 32px;
                  -fx-font-weight: bold;
                  -fx-text-fill: white;"/>

    <Label fx:id="dernierScoreLabel"
           style="-fx-text-fill: white; -fx-font-size: 16px;"/>
    <Label fx:id="meilleurScoreLabel"
           style="-fx-text-fill: white; -fx-font-size: 16px;"/>
    <Label fx:id="niveauLabel"
           style="-fx-text-fill: white; -fx-font-size: 16px;"/>

    <Button text="Rejouer" onAction="#rejouer"
            style="
                -fx-background-color: white;
                -fx-text-fill: #1e3c72;
                -fx-font-size: 16px;
                -fx-background-radius: 15;
                -fx-padding: 10 25;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 3);
            "/>

    <Button text="Quitter" onAction="#quitter"
            style="
                -fx-background-color: transparent;
                -fx-text-fill: white;
                -fx-font-size: 14px;
                -fx-underline: true;
            "/>

</VBox>
